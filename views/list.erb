<div id="cont">

<% if @pages.empty? %>
	<h1>No pages yet</h1>
<% else %>
	<h1>All pages</h1>
	<% @pages.each do |page| %>
		<div class="page">
			<strong><a href="/<%= page.basename %>"><%= page.basename.capitalize %></a></strong>
			<ul class="inline">
				<li>
					<script type="text/javascript">
				 	document.write(time_ago_in_words(<%= page.updated_at.for_time_ago_in_words %>) + ' ago');
					</script>
				</li>
				<li>
					&mdash;
				</li>
				<li>
					<a href="/e/<%= page.basename %>">edit</a>
				</li>
				<li>
					&bull;
				<li>
				<li>
					<a href="/h/<%= page.basename %>">history</a>
				</li>
			</ul>
		</div>
	<% end %>
<% end %>

</div>